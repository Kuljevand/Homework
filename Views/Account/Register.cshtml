@model Homework1.Models.AccModels.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>Регистритај се</h2>
<br />


<form method="post">
    <div class="row">
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email">Емаил</label>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="PhoneNumber"/>
                <label asp-for="PhoneNumber">Телефонски број</label>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                <label asp-for="Name">Корисничко име</label>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="Address" type="text" class="form-control" placeholder="Adress">
                <label asp-for="Address">Адреса</label>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="ClientTypeId" type="text" class="form-control" placeholder="ClientTypeId">
                <label asp-for="ClientTypeId">Тип на клиент</label>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="IdNo" type="text" class="form-control" placeholder="IdNo">
                <label asp-for="IdNo">Број</label>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="CityId" type="text" class="form-control" placeholder="CityId">
                <label asp-for="CityId">Град</label>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="CountryId" type="text" class="form-control" placeholder="CountryId">
                <label asp-for="CountryId">Држава</label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Поднеси</button>

    @Html.ValidationSummary()
</form>

<p class="col-12 text-center text-danger">@Html.ValidationMessage("Error")</p>
<h4 class="col-12 text-center text-success">@Html.ValidationMessage("Success")</h4>


    

